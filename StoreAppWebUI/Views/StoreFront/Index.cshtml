@model IEnumerable<StoreAppWebUI.Models.StoreFrontVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>List of Restaurants</h1>

    <a type="button" class="btn btn-primary" asp-action="AddStore">Add a Store to the List</a>

    <table class="table table-striped table-hover" style="position:relative; top: 15px">
        <thead>
            <tr>
                <th>Store Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StoreAddress)</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>