@model List<StoreFrontVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>List of Stores</h1>

    <a type="button" class="btn btn-primary" asp-action="AddStore">Add a Store to the List</a>

    <table class="table table-striped table-hover" style="position:relative; top: 15px">
        <thead>
            <tr>
                <th>Store ID</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.StoreFrontID</td>
                    <td>
                        @Html.ActionLink(@store.StoreName, "InspectStore", new { p_storeID = store.StoreFrontID }, new { style = "text-decoration:underline"})
                    </td>
                    <td>@store.StoreAddress</td>
                </tr>
            }

        </tbody>
    </table>

</body>
</html>