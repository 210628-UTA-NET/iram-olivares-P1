@model StoreFrontVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>Replenish Inventory for @Model.StoreName</h3>

    <div>
        <div>
            <form asp-action="AddAmount">
                <label for="item">Select Item to Replenish:</label>
                <select id="item" name="p_itemID">
                    @foreach (var item in Model.LineItems)
                    {
                        <option value="@item.LineItemID">@item.Product.ProductName - @item.Quantity Available</option>
                    }
                </select>
                <div>
                    <label for="amount">Amount to Add: </label>
                    <input id="amount" type="number" name="p_amount" min="0" value="0" class="form-control">
                    <input name="p_storeID" type="hidden" asp-for="@Model.StoreFrontID" value="@Model.StoreFrontID">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <form asp-action="InspectStore">
                <input name="p_storeID" type="hidden" asp-for="@Model.StoreFrontID" value="@Model.StoreFrontID">
                <button type="submit" class="btn btn-danger">Return to Store Info</button>
            </form>
        </div>
    </div>
</body>
</html>