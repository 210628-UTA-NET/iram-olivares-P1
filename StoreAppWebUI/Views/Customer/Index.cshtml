@model IEnumerable<StoreAppWebUI.Models.CustomerVM>

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>List of Customers</h1>

    <a type="button" class="btn btn-primary" asp-action="AddCustomer">Add a Customer to the List</a>

    <table class="table table-striped" style="position:relative; top: 15px">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone Number</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>
                        @Html.ActionLink(customer.CustomerName, "InspectCustomer", new { p_customerID = customer.CustomerID }, new { style = "text-decoration:underline" })
                    </td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerAddress</td>
                    <td>@customer.CustomerPhone</td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>